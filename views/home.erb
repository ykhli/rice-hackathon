

  <div id="itemRecall">
    <div class="row">
      <div class="col-md-5">
        <div class = "rooms purple">
          <div class = "rooms-head">
            <h3> <%= @justrooms.count %> ROOMS TRACKED</h3>
          </div>

          <div class = "rooms-content">
            <% @rooms.each.with_index do |room, idx| %>  
            <div class = 'rooms-item'>
              <a class="pull-left boxed"><%= idx + 1 %></a>
              <a href="/room/<%= room.id %>">
              <i class="fa fa-pencil-square-o"></i>
              </a>
              <div class = 'title'>
                <a href="/containers/room_<%= room.id %>"><%= room.name %> </a>
                <p> <% room.containers.each do |container| %>
                  Container: <%= container.name %> 
                  <% end %></p>
                <p class="meta">Created: <%= room.created_at %></p>
              </div>
            </div>
            <% end %>
          </div>


        </div>
      </div>
      <div class = "col-md-5 recent">
        <div class = "header">
          Recently Added
        </div>
        <div id = "container">
        <% @items.each.with_index do |item, idx| %>
          <div class="latest item">
            <div class = "latest-container">
              
              <h2 class = "name">
                <%= item.name %>
              </h2>
              <strong>Added:<%= item.created_at %> </strong>
              <div class='tags'>
                #home #omg #tags
              </div>
              <i class="fa fa-pencil-square-o"></i>
            </div>

            <div class = "icons">

                <%if idx % 2 == 0%>
                  <i class="fa fa-camera-retro fa-2x"></i>
                <%elsif idx % 3 == 0%>
                  <i class="fa fa-sun-o fa-2x"></i>
                <%elsif idx % 5 == 0%>
                  <i class="fa fa-shopping-carto fa-2x"></i> 
                <% else %>
                  <i class="fa fa-rocket fa-2x"></i> 
                <% end %> 
            </div>
          </div>
        <% end %>
    </div>
    </div>    


</div>


